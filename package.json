{
  "name": "train-conductor",
  "description": "Announces the release train schedule",
  "keywords": [
    "slack",
    "release-train"
  ],
  "author": "Tobi Fuhrimann (https://berndsgn.ch)",
  "license": "ISC",
  "scripts": {
    "start": "node dist",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node' src/index.ts",
    "build": "rimraf dist && tsc",
    "build:docker": "docker build -t train-conductor .",
    "lint": "tslint --fix 'src/**/*.ts'",
    "pretest": "npm run lint",
    "test": "mocha --require ts-node/register src/**/*.test.ts"
  },
  "dependencies": {
    "botkit": "^0.7.2",
    "moment": "^2.24.0",
    "moment-recur-ts": "^1.3.1",
    "moment-timezone": "^0.5.14"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/moment-timezone": "^0.5.10",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mastertinner/train-conductor.git"
  },
  "bugs": {
    "url": "https://github.com/mastertinner/train-conductor/issues"
  },
  "engines": {
    "node": ">=11"
  }
}
